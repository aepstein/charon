  <%= render "shared/error_messages", :target => form.object %>
  <%= form.inputs do %>
  <%= form.input :purchase_price, :hint => 'What was the purchase price of the fund_item?' %>
  <%= form.input :current_value, :hint => 'What is the estimated current value of the fund_item?' %>
  <%= form.input :description, :hint => 'Briefly describe what the fund_item is.' %>
  <%= form.input :identifier, :hint => 'Provide a unique identifier for the fund_item.' %>
  <%= form.input :usable, :as => :radio, :collection => { "Usable" => true, "Not usable" => false } %>
  <%= form.input :missing, :as => :radio, :collection => { "Missing" => true, "Not missing" => false },
    :hint => 'Missing fund_items may have been lost or stolen.' %>
  <%= form.input :acquired_on, :as => :date_picker %>
  <%= form.input :scheduled_retirement_on, :as => :date_picker,
    :hint => 'Until when is the fund_item intended to be in service?' %>
  <%= form.input :retired_on, :as => :date_picker,
    :hint => 'If fund_item is no longer in servcie, indicate the date it was retired from inventory.' %>
  <%= form.input :comments, :hint => 'Provide any special notes about the fund_item here.' %>
  <% end %>
  <%= form.actions %>

