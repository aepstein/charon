<% organization ||= false -%>
<% user ||= false -%>
  <%= render "shared/error_messages", :target => form.object %>
  <%= form.inputs do %>
    <% if form.object.new_record? %>
      <% unless organization %>
        <%= form.input :organization_name, :label => 'Organization' %>
      <% end %>
      <% unless user %>
        <%= form.input :user_name, :label => 'User' %>
      <% end %>
    <% end %>
    <%= form.input :active, :label => "Active?", :as => :radio %>
    <%= form.input :role %>
  <% end %>
  <%= form.actions %>

