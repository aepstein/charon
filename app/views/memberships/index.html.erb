<h2>Listing memberships for <%= @context %></h2>

<%= paginate @memberships %>

<%= render :partial => "memberships", :object => @memberships, :locals => {
  :organization => @context.class == Organization, :user => @context.class == User
} %>

<%= paginate @memberships %>

<br />

<p>
<% if @context && permitted_to?( :create, @context.memberships.build ) %>
  <%= link_to "New membership for #{@context}", new_polymorphic_path( [ @context, :membership ] ) %>
<% end %>
</p>

