<h2>Listing fund tier assignments for <%= fund_source %></h2>

<%= form_tag fund_source_fund_tier_assignments_path( fund_source ), method: :get do %>
  <p>
    <%= label_tag 'search[organization_name_contains]', 'Organization' %>
    <%= text_field_tag 'search[organization_name_contains]', @search['organization_name_contains'] %>
    <%= submit_tag 'Search' %>
  </p>
<% end %>


<%= paginate fund_tier_assignments %>

<%= render partial: "fund_tier_assignments/fund_tier_assignments", object: fund_tier_assignments %>

<br />

<%= paginate fund_tier_assignments %>

<p>
<% if permitted_to? :create, fund_source.fund_tier_assignments.build -%>
<%= link_to 'New fund tier assignment', new_fund_source_fund_tier_assignment_path( fund_source ) %>
<% end -%>
</p>

