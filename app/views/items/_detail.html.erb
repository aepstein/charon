<% level ||= 2 %>
<p>
  <b>Node:</b> <%=h detail.node %>
</p>

<% if permitted_to?( :review, detail ) -%>
  <p>
    <b>Amount:</b> <%= number_to_currency detail.amount %>
  </p>

<% end -%>

<%= render :partial => 'editions/detailed', :collection => detail.editions.with_permissions_to(:show),
  :locals => { :level => level + 1 } %>

