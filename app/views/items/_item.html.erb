  <tr>
    <td colspan="3"><%=h item.node.name %></td>
    <td><%= link_to_if item.may_destroy?(current_user), 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>

  <%= render :partial => 'version', :collection => item.versions %>

  <%= render :partial => 'item', :collection => item.request.items.children_of(item) %>

