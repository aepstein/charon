<% unless new_item.allowed_nodes.empty? %>
  <% form_for( :item,
               new_item,
               :url => new_request_item_path( new_item.request ),
               :html => { :method => :get } ) do |f| %>

  <% unless new_item.parent.nil? %>
  <%= f.hidden_field :parent_id %>
  <% end %>

  <p>
    <%= f.label :node_id, 'New Item' %>
    <%= f.collection_select :node_id, new_item.allowed_nodes, :id, :name %>
    <%= f.submit 'Start' %>
  </p>

  <% end %>
<% end %>

