<% if new_item.allowed_nodes.size > 0 && permitted_to?( :create, new_item ) -%>
  <% form_for( :item, new_item, :url => new_request_item_path( new_item.request ), :html => { :method => :get } ) do |f| %>
    <% unless new_item.parent.nil? -%>
      <%= f.hidden_field :parent_id %>
    <% end -%>
    <%= f.label :node_id, ( new_item.parent ? "Add New Subitem for #{new_item.parent}" : 'Add New Root Item') %>
    <%= f.collection_select :node_id, new_item.allowed_nodes, :id, :name %>
    <%= f.submit( new_item.parent ? 'Add Subitem' : 'Add Root Item' ) %>
  <% end %>
<% end -%>

