<h2>Listing registrations <%= @organization ? "for #{h @organization}" : "" %><%= @registration_term ? "for #{h @registration_term}" : "" %></h2>

<%= form_tag polymorphic_path( [ @context, :registrations ] ), :method => :get do %>
  <p>
    <%= label_tag 'search[named]', 'Name' %>
    <%= text_field_tag 'search[named]', @search['named'] %>
    <%= submit_tag 'Search' %>
  </p>
<% end %>

<%= paginate @registrations %>

<%= render :partial => "registrations/registrations", :object => @registrations %>

<%= paginate @registrations %>

