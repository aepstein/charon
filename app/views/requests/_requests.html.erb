<% status ||= false %>
<% basis ||= false %>
<% organization ||= false %>

<table>
<thead>
  <tr>
  <% unless basis %>
    <th>Basis</th>
  <% end %>
  <% unless organization %>
    <th>Organizations</th>
  <% end %>
  <% unless status %>
    <th>Status</th>
  <% end %>
  </tr>
</thead>
<tbody>
  <%= render :partial => 'requests/request', :collection => requests, :locals => {
    :organization => organization, :status => status, :basis => basis
  } %>
</tbody>
</table>

