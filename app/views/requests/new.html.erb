<h1>New Request for <%=h @organization.name %></h1>

<% form_for(:request,
            @request,
            :url => request_items_path(@request),
            :method => :post) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'form',
             :object => f %>

  <%= f.label :basis_id, 'Basis for request' %>
  <%= f.collection_select :basis_id,
                          Basis.find(:all),
                          :id,
                          :name %>
  <p>
    <%= f.submit 'Create' %>
  </p>

<% end %>
<%= link_to 'Back', "organizations/" + @organization.id.to_s + "/profile" %>

