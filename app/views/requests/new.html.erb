<h1>New request</h1>

<%= javascript_include_tag :defaults %>

<% form_for( :request,
             @request,
             :url => request_basis_requests_path(
                     @request.request_basis_id ),
             :method => :post ) do |f| %>
  <%= f.error_messages %>

<%= render :partial => 'form',
           :object => f %>
  <p>
    <%= f.submit 'Create' %>
  </p>

<% end %>
<%= link_to 'Back', request_basis_requests_path( @request.request_basis_id ) %>

