<h1>Showing request</h1>
<p>
  <b>Request structure:</b>
  <%=h @request.basis.structure.name %>
</p>

<p>
<%= link_to 'See request items',
            request_items_path( @request.id ) %>
</p>

<%= link_to 'Edit', edit_request_path(@request) %>
<% @request.organizations.each do |organization| %>
 | <%= link_to "Back to #{organization.name} requests",
             organization_requests_path(organization) %>
<% end %>

