<h1>Login</h1>

<h2>Sign in with Kerberos</h2>

<%= link_to 'Click here to log in with kerberos', sso_login_path %>

<h2>Or Provide a Local Username and Password</h2>

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.label :net_id %><br />
  <%= f.text_field :net_id %>
  </p>

  <p>
  <%= f.label :password %><br />
  <%= f.password_field :password %>
  </p>

  <p>
  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  </p>

  <p>
  <%= f.submit "Login" %>
  </p>

<% end %>

