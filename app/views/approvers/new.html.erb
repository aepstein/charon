<h1>New approver for <%= @approver.framework %></h1>

<% form_for(:approver, @approver, :url => framework_approvers_path(@approver.framework) ) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => 'form', :object => f %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<p>
<%= link_to 'Back', framework_approvers_path( @approver.framework ) %>
</p>>

