<h1>Listing fulfillments</h1>

<table>
  <tr>
    <th>Condition</th>
    <th>Condition type</th>
    <th>Fulfiller</th>
    <th>Fulfiller type</th>
  </tr>

<% @fulfillments.each do |fulfillment| %>
  <tr>
    <td><%=h fulfillment.condition_id %></td>
    <td><%=h fulfillment.condition_type %></td>
    <td><%=h fulfillment.fulfiller_id %></td>
    <td><%=h fulfillment.fulfiller_type %></td>
    <td><%= link_to 'Show', fulfillment %></td>
    <td><%= link_to 'Edit', edit_fulfillment_path(fulfillment) %></td>
    <td><%= link_to 'Destroy', fulfillment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New fulfillment', new_fulfillment_path %>