  <%= table_row_tag do %>
    <td><%= organization.name %></td>
    <td><%= link_to 'Show', organization %></td>
    <td><%= link_to( 'Dashboard', dashboard_organization_path( organization ) ) if permitted_to? :dashboard, organization %></td>
    <td><%= link_to( 'Edit', edit_organization_path(organization) ) if permitted_to? :edit, organization %></td>
    <td><%= link_to( 'Destroy', organization, data: { confirm: 'Are you sure?' },
      method: :delete ) if permitted_to? :destroy, organization %></td>
  <% end %>

