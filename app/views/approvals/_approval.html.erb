  <tr>
    <% if user then %>
    <td><%=h approval.user %></td>
    <% end %>
    <% if approvable then %>
    <td><%=h approval.approvable %></td>
    <% end %>
    <td><%=h approval.created_at %></td>
    <% if approval.new_record? && approval.may_create?(current_user) %>
    <td><%= link_to 'Approve', new_approvable_approval_path( approval.approvable ) %></td>
    <% elsif approval.may_destroy?(current_user) %>
    <td><%= link_to 'Unapprove', approval, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>

