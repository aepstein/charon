<h1>New approval</h1>

<% form_for(@approval) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :approvable_id %><br />
    <%= f.text_field :approvable_id %>
  </p>
  <p>
    <%= f.label :approvable_type %><br />
    <%= f.text_field :approvable_type %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', approvals_path %>