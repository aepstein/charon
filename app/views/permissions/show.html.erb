<p>
  <b>Framework:</b>
  <%=h @permission.framework %>
</p>

<p>
  <b>Status:</b>
  <%=h @permission.status %>
</p>

<p>
  <b>Role:</b>
  <%=h @permission.role %>
</p>

<p>
  <b>Action:</b>
  <%=h @permission.action %>
</p>

<p>
  <b>Perspective:</b>
  <%=h @permission.perspective %>
</p>

<% unless @permission.agreements.empty? %>
<p>
  <b>Agreements:</b>
  <ul>
  <% @permission.agreements.each do |agreement| %>
  <li><%= link_to agreement.to_s, agreement %></li>
  <% end %>
  </ul>
</p>
<% end %>

<p>
<%= link_to 'Edit', edit_permission_path(@permission) %> |
<%= link_to 'Back', framework_permissions_path(@permission.framework) %>
</p>

