<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Requestable type</th>
    <th>Item amount limit</th>
    <th>Item quantity limit</th>
    <th>Structure</th>
    <th>Parent</th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%=h node.name %></td>
    <td><%=h node.requestable_type %></td>
    <td><%=h node.item_amount_limit %></td>
    <td><%=h node.item_quantity_limit %></td>
    <td><%=h node.structure_id %></td>
    <td><%=h node.parent_id %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

