  <%= render "shared/error_messages", :target => form.object %>
  <%= form.inputs do %>
  <%= form.input :parent, :label => "Parent Node", :collection => form.object.structure.nodes,
    :input_html => { :include_blank => true } %>
  <%= form.input :name %>
  <%= form.input :fund_requestable_type, :label => "Type of fund_request calculation form",
