  <%= form.input :fund_item_amount_limit %>
  <%= form.input :fund_item_quantity_limit %>
  <%= form.input :document_types, :as => :check_boxes,
    :hint => 'What types of supporting documentation should be submitted?' %>
  <% end %>
  <%= form.buttons %>

