  <% table_row_tag do %>
    <td><%=h node.name %></td>
    <td><%=h node.requestable_type %></td>
    <td><%=h node.item_amount_limit %></td>
    <td><%=h node.item_quantity_limit %></td>
    <td><%=h node.structure_id %></td>
    <td><%=h node.parent_id %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to( 'Edit', edit_node_path(node) ) if permitted_to? :edit, node %></td>
    <td><%= link_to( 'Destroy', node, :confirm => 'Are you sure?', :method => :delete ) if permitted_to? :destroy, node %></td>
  <% end %>

