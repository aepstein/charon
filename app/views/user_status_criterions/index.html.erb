<h1>Listing user_status_criterions</h1>

<table>
  <tr>
    <th>Statuses</th>
  </tr>

<% @user_status_criterions.each do |user_status_criterion| %>
  <tr>
    <td><%=h user_status_criterion.statuses.sort.join ', ' %></td>
    <td><%= link_to 'Show', user_status_criterion %></td>
    <td><%= link_to 'Edit', edit_user_status_criterion_path(user_status_criterion) %></td>
    <td><%= link_to 'Destroy', user_status_criterion, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p>
<%= link_to 'New user_status_criterion', new_user_status_criterion_path %>
</p>

