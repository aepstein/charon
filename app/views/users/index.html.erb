<h2>Listing users</h2>

<% form_for :search, :url => users_path, :html => { :method => :get } do |f| %>
  <p>
    <%= f.label :name_like, 'Name' %>
    <%= f.text_field :name_like %>
    <%= f.submit 'Search' %>
  </p>
<% end %>

<%= will_paginate @users %>

<%= render :partial => "users", :object => @users %>

<%= will_paginate @users %>

<br />

<p>
<% if permitted_to? :create, User.new -%>
<%= link_to 'New user', new_user_path %>
<% end -%>
</p>

