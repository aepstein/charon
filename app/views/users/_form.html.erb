  <%= render "shared/error_messages", :target => form.object %>
  <%= form.inputs do %>
    <%= form.input :net_id %>
    <%= form.input :email %>
    <%= form.input :first_name %>
    <%= form.input :middle_name %>
    <%= form.input :last_name %>
    <%= form.input :password, :label => (form.object.new_record? ? "Password" : "Change password") %>
    <%= form.input :password_confirmation %>
    <%= form.input :date_of_birth, :as => :string %>
    <% if current_user.admin? %>
      <%= form.input :admin, :as => :radio %>
    <% end %>
  <% end %>

  <%= form.semantic_fields_for :addresses do |address_form| %>
    <%= render :partial => 'addresses/form', :object => address_form %>
  <% end %>

  <%= form.buttons %>

