  <%= table_row_tag do %>
    <td><%= user.name %></td>
    <td><%= user.net_id %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to( 'Edit', edit_user_path(user) ) if permitted_to? :edit, user %></td>
    <td><%= link_to( 'Destroy', user_path(user), data: { confirm: 'Are you sure?' }, method: :delete ) if permitted_to? :destroy, user %></td>
  <% end %>

