  <% table_row_tag do %>
    <td><%=h user.name %></td>
    <td><%=h user.net_id %></td>
    <td><%=h user.email %></td>
    <td><%=h user.date_of_birth %></td>
    <td><%= link_to_if user.may_see?(current_user), 'Show', user %></td>
    <td><%= link_to( 'Edit', edit_user_path(user) ) if permitted_to? :edit, user %></td>
    <td><%= link_to( 'Destroy', user_path(user), :confirm => 'Are you sure?', :method => :delete ) if permitted_to? :destroy, user %></td>
  <% end %>

