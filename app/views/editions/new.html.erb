<h1>New edition</h1>

<% form_for( :edition, @edition, :url => item_editions_path(@edition.item) ) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "form",
             :object => f %>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<p>
<%= link_to 'Back', request_items_path(@edition.item.request) %>
</p>

