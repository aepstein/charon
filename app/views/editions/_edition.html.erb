<p>
  <b>Node:</b> <%= edition.item.node %>
</p>

<p>
  <b>Perspective:</b> <%=h edition.perspective %>
</p>

<p>
  <b>Maximum request:</b> <%= number_to_currency edition.max_request %>
</p>

<p>
  <b><%= edition.perspective.titleize %> amount:</b> <%=h number_to_currency(edition.amount) %>
</p>

<p>
  <b><%= edition.perspective.titleize %> comment:</b>
</p>

<%=markdown edition.comment %>

<% if edition.requestable %>
<%= render :partial => "#{edition.requestable.class.to_s.tableize}/#{edition.requestable.class.to_s.underscore}",
           :object => edition.requestable %>
<% end %>

<% unless edition.documents.empty? %>
<h2>Attached Documents</h2>

<table>
<thead>
  <tr>
    <th>Type</th>
  </tr>
</thead>
<tbody>
<%= render :partial => 'documents/document', :collection => edition.documents %>
</tbody>
</table>
<% end %>

