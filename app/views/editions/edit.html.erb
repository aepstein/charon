<h1>Editing edition</h1>

<% form_for(@edition) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "form",
             :object => f %>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<p>
<%= link_to 'Show', @edition %> |
<%= link_to 'Back', request_items_path(@edition.item.request) %>
</p>

