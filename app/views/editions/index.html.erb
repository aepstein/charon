<h2>Listing editions for <%=h @item %></h2>

<table>
  <tr>
    <th>Item</th>
    <th>Requestable type</th>
    <th>Amount</th>
    <th>Comment</th>
    <th>Stage</th>
  </tr>

<% @editions.each do |edition| %>
  <tr>
    <td><%=h edition.item_id %></td>
    <td><%=h edition.item.node.requestable_type %></td>
    <td><%=h edition.amount %></td>
    <td><%=h edition.comment %></td>
    <td><%=h edition.stage %></td>
    <td><%= link_to 'Show', edition %></td>
    <td><%= link_to 'Edit', edit_edition_path(edition) %></td>
    <td><%= link_to 'Destroy', edition, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New edition', new_item_edition_path(@item) %>

