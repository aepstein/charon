  <%= render "shared/error_messages", :target => form.object %>
  <%= form.inputs do %>
    <%= form.input :name %>
    <%= form.input :allowed_for_first, :as => :radio,
      :label => 'Allowed for initial submission?',
      :hint => 'Can the initial submission be of this type?' %>
    <%= form.input :amendable_quantity_limit,
      :hint => 'How many items may be amended? (Leave blank if no restriction)' %>
    <%= form.input :appendable_quantity_limit,
      :hint => 'How many items may be added? (Leave blank if no restriction)' %>
    <%= form.input :appendable_amount_limit,
      :hint => 'How much may be requested in items added? (Leave blank if no restriction)' %>
    <%= form.input :quantity_limit,
      :hint => 'How many total items can be submitted? (Leave blank if no restriction)' %>
  <% end %>
  <%= form.actions %>

