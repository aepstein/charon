<h1>Listing request_items</h1>

<table>
  <tr>
    <th>Form</th>
    <th>Form type</th>
    <th>Request amount</th>
    <th>Requestor comment</th>
    <th>Allocation amount</th>
    <th>Allocator comment</th>
    <th>Sft</th>
    <th>Rgt</th>
    <th>Request node</th>
  </tr>

<% @request_items.each do |request_item| %>
  <tr>
    <td><%=h request_item.form_id %></td>
    <td><%=h request_item.form_type %></td>
    <td><%=h request_item.request_amount %></td>
    <td><%=h request_item.requestor_comment %></td>
    <td><%=h request_item.allocation_amount %></td>
    <td><%=h request_item.allocator_comment %></td>
    <td><%=h request_item.sft %></td>
    <td><%=h request_item.rgt %></td>
    <td><%=h request_item.request_node_id %></td>
    <td><%= link_to 'Show', request_item %></td>
    <td><%= link_to 'Edit', edit_request_item_path(request_item) %></td>
    <td><%= link_to 'Destroy', request_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New request_item', new_request_item_path %>