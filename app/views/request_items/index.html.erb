<h1>Listing request_items</h1>

<table>
  <tr>
    <th>Item Type</th>
    <th>Request amount</th>
    <th>Allocation amount</th>
    <th colspan="3">Available commands</th>
  </tr>

<%= render :partial => 'item',
           :collection => @request.request_items.root %>

</table>

<p>
<%= collection_select RequestNode, :request_node_id, @request.request_basis.request_structure.request_nodes.root,
                      :id, :name, {}, { :onchange => 'item_url(this.next("a"), this.value)' } %>
<br />
<%= link_to 'New request_item', new_request_request_item_path( @request.id ) %>
</p>

