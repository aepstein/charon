<h1>New request_item</h1>

<% form_for( :request_item,
             @request_item,
             :url => request_request_items_path( @request_item.request_id ),
             :method => :post ) do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :request_node_id %>

  <%= render :partial => 'form',
              :object => f %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', request_request_items_path( @request_item.request_id ) %>

