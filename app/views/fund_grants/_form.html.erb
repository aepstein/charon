<%= render partial: "shared/error_messages", locals: { target: form.object } %>
<% if form.object.new_record? && form.object.fund_requests.first %>
<%= render partial: "shared/error_messages", locals: { target: form.object.fund_requests.first } %>
<% end %>
<%= form.inputs do %>
  <% if form.object.new_record? -%>
  <%= form.input :fund_source,
    collection: form.object.organization.fund_sources.allowed_for( current_user )
  %>
  <% else %>
  <%= form.input :fund_tier, collection: form.object.allowed_fund_tiers %>
  <% end -%>
<% end %>
<%= form.actions %>

